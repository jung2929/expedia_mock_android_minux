<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accounttab_account_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="'?? ?'"
            android:textColor="#2F2870"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/accounttab_account_name_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="minux8905@gmail.com"
            android:textColor="#2F2870"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="통화"
                    android:textColor="#2F2870"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KRW"
                    android:textColor="#2F2870"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="국가"
                    android:textColor="#2F2870"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/accounttab_nationalflag_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="KOR"
                        android:textColor="#2F2870"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/accounttab_nation_btn"
                        android:layout_width="35dp"
                        android:layout_height="40dp"
                        android:background="#FFF"
                        android:gravity="center"
                        android:text="Ⅴ"
                        android:textColor="#2F2870" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="40dp"
        android:text=" 계정"
        android:textColor="#000"
        android:textSize="22dp" />

    <Button
        android:id="@+id/accounttab_accountmodify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_all_border"
        android:gravity="start"
        android:padding="15dp"
        android:text="계정 정보 수정"
        android:textColor="#898EAC"
        android:textSize="20dp" />
</LinearLayout>