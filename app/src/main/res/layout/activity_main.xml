<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_tablayout">

        <FrameLayout
            android:id="@+id/main_tab_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/main_booking_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:background="#000">

                <FrameLayout
                    android:id="@+id/bookingtab_head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/logo_layout"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@color/colorAppTheme">

                        <ImageView
                            android:id="@+id/expedia_logo_iv"
                            android:layout_width="160dp"
                            android:layout_height="130dp"
                            android:layout_centerHorizontal="true"
                            app:srcCompat="@drawable/expedia_logo" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/bookingtab_btn_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="115dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/border01"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <ImageButton
                                android:id="@+id/bookingtab_hotel_btn"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:scaleType="fitEnd"
                                android:layout_marginLeft="2dp"
                                android:src="@drawable/hotel"
                                android:background="@drawable/border01"/>

                            <ImageButton
                                android:id="@+id/bookingtab_airplane_btn"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:scaleType="fitStart"
                                android:layout_marginRight="2dp"
                                android:src="@drawable/airplane"
                                android:background="@drawable/border01"/>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/bookingtab_both_btn"
                            android:layout_width="350dp"
                            android:layout_height="70dp"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/both"
                            android:background="@drawable/border01"/>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/bookingtab_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bookingtab_head"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/border01"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/login_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:gravity="end"
                            android:text="Expedia "
                            android:textColor="@color/colorAppTheme"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:text="회원으로 에약!"
                            android:textColor="@color/colorAppTheme"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="335dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="지금 바로 엄선된 호텔을 추가 할인받으실 수 있어요."
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/bookingtab_signup_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/border01"
                        android:text="로그인 또는 회원가입"
                        android:textColor="#0E4FEE"
                        android:textSize="24dp" />


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/main_schedule_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TAB2"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_account_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TAB3" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

    <android.support.design.widget.TabLayout
        android:id="@+id/main_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFF"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/colorAppTheme">

        <android.support.design.widget.TabItem
            android:id="@+id/tarvel_booking_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TabItem
            android:id="@+id/schedule_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TabItem
            android:id="@+id/account_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TabLayout>

</RelativeLayout>