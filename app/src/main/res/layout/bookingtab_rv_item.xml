<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookingtab_rv_item"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_border">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bookingtab_rv_item_cardimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:riv_corner_radius="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookingtab_rv_item_saletitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="72시간 반짝 세일"
                android:textColor="#FFF"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookingtab_rv_item_saleguide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일부 호텔을 20% 이상 할인해 드려요. 반짝 세일은 화요일에서 목요일까지만 진행됩니다."
                android:textColor="#FFF"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

